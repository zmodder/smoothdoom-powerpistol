// The smaller blood splats are more common than the big ones.

decalgroup BlueBloodSplat
{
	BlueBloodSplat1	2
	BlueBloodSplat2	1
	BlueBloodSplat3	5
	BlueBloodSplat4	5
	BlueBloodSplat5	5
	BlueBloodSplat6	5
	BlueBloodSplat7	6
}

decal BlueBloodSmear1
{
	pic BSMEAR1
	x-scale 0.625
	y-scale 0.625
	shade "00 00 255"
	randomflipx
	animator BloodSmearer
}

decal BlueBloodSmear2
{
	pic BSMEAR1
	x-scale 0.625
	y-scale 0.625
	shade "00 00 255"
	randomflipx
	animator BloodSmearer
}

decalgroup BlueBloodSmear
{
	BlueBloodSmear1	1
	BlueBloodSmear2	1
}

